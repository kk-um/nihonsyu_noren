<div class="container">
  <div class="row d-flex justify-content-center">
    <h5 class="border p-3 my-3">
      会員一覧
    </h5>
  </div>


  <div class="row">
    <table class="table">
      <thead class="bg-dark">
        <tr>
          <th>会員ID</th>
          <th>ユーザー名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= link_to user.name, admin_user_path(user) %></td>
          <td><%= user.email %></td>
          <td>
            <% if user.is_active %>
              <p class="text-success"><strong>有効</strong></p>
            <% else %>
              <p class="text-danger"><strong>停止</strong></p>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="d-flex justify-content-center">
  <%= paginate @users %>
  </div>
</div>
