<!--顧客の登録情報編集する画面-->
<div class="container">
  <div class="row d-flex justify-content-center">
    <h5 class="border p-3 my-3">
      会員情報編集
    </h5>
  </div>

  <div class="row d-flex justify-content-center">
      <%= form_with model: @user, url: user_path, method: :patch do |f| %>
      <table class="table table-borderless">
          <tr>
            <td width="30%">画像</td>
            <td><%= f.file_field :profile_image, accept: "image/*", class: "rounded" %></td>
          </tr>
          
          <tr>
            <td width="30%">名前</td>
            <td><%= f.text_field :name, class: "rounded" %></td>
          </tr>

          <td width="30%">メールアドレス</td>
          <td><%= f.text_field :email, class: "rounded" %></td>
          <td></td>
          </tr>
        </table>
          <div class=" d-flex justify-content-center m-2">
            <%= f.submit "編集内容を保存", class:"btn btn-success mx-2" %>
            <%= link_to "退会する", user_path, method: :delete, class:"btn btn-danger mx-2" %>
          </div>
      <% end %>
  </div>
</div>