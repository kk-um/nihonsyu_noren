<div class="container mt-2">
  <h2>レビュー一覧</h2>
  <div class="row">
    <div class="col-md-3">
      <table class="table">
        
        <% @items.each do |item| %>
        <!--<thead>-->
          <tr>
            <td>画像</td>
            <td>ユーザー名</td>
          </tr>
        <!--</thead>-->
          <!--<tbody>-->
            <tr>
              <td>
                <%= link_to item_path(item.id) do %>
                  <%= image_tag item.get_image(100,100) %>
                <% end %>
              </td>
            </tr>
    <!--商品名-->
            <tr>
              <td>
                <%= link_to item_path(item.id) do %>
                  <%= item.name %>
                <% end %>
              </td>
            </tr>
    <!--ジャンル-->
            <tr>
              <td><% item.genres.each do |genre| %>
                  <%= genre.name %>
                  <% end %></td>
            </tr>
            
            <tr>
              <td>いいね</td>
              <td>コメント</td>
            </tr>
          <!--</tbody>-->
        <% end %>
        
      </table>
    </div>
  </div>
</div>