<div class="container">
  <div class="row d-flex justify-content-center">
    <h5 class="border border-white p-3 my-3">
      新規会員登録
    </h5>

  </div>
  <br>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "layouts/errors", obj: @user %>


  <div class="row d-flex justify-content-center">
     <div class="col-2"></div>
    <div class="col-3">
      <%= f.label :name, "名前" %>
    </div>
    <div class="col-7">
      <%= f.text_field :name, class: "rounded" %>
    </div>
  </div>


  <div class="row d-flex justify-content-center">
     <div class="col-2"></div>
    <div class="col-3">
      <%= f.label :email, "メールアドレス" %>
    </div>
    <div class="col-7">
      <%= f.email_field :email, class: "rounded" %>
    </div>
  </div>



  <div class="row d-flex justify-content-center">
    <div class="col-2"></div>
    <div class="col-3">
      <%= f.label :password, "パスワード" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>文字以上)</em>
      <% end %>
    </div>
    <div class="col-7">
      <%= f.password_field :password, autocomplete: "new-password", class: "rounded" %>
    </div>
  </div>
  <div class="row d-flex justify-content-center">
     <div class="col-2"></div>
    <div class="col-3">
      <%= f.label :password_confirmation, "パスワード(確認用)" %>
    </div>
    <div class="col-7">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "rounded" %>
    </div>
  </div>

    <div class="row d-flex justify-content-center mt-3">
      <%= f.submit "新規登録", class:"btn btn-success" %>
    </div>
  </div>
  <% end %>

  <div class="row d-flex justify-content-center my-4">
    <h6 class="">既に登録済みの方は<%= render "users/shared/links" %></h6>
  </div>

</div>